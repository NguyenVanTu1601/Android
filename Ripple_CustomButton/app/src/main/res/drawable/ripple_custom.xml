<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"> // chọn xem có click vào ko
        <shape android:shape="rectangle"> // nếu ko click sẽ dùng item bên dưới
            <corners android:radius="20dp"/>
            <solid android:color="#ff0"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <solid android:color="#00F7FF"/>
        </shape>
    </item>
</selector>