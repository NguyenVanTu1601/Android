<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_margin="@dimen/_10sdp"
    android:id="@+id/layoutShowSchedule"
    android:background="@drawable/background_dialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/_5sdp">
        <TextView
            android:id="@+id/nameSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên môn học"
            android:textSize="@dimen/_15ssp"
            android:padding="@dimen/_3sdp"
            android:textColor="#000000" />
        <TextView
            android:id="@+id/roomSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phòng học"
            android:textSize="@dimen/_15ssp"
            android:padding="@dimen/_3sdp"
            android:textColor="#000000" />
        <TextView
            android:id="@+id/kipSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kíp học"
            android:textSize="@dimen/_15ssp"
            android:padding="@dimen/_3sdp"
            android:textColor="#000000" />
        <TextView
            android:id="@+id/nhomSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhóm môn học"
            android:textSize="@dimen/_15ssp"
            android:padding="@dimen/_3sdp"
            android:textColor="#000000" />
        <TextView
            android:id="@+id/gvSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giảng viên"
            android:textSize="@dimen/_15ssp"
            android:padding="@dimen/_3sdp"
            android:textColor="#000000" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>