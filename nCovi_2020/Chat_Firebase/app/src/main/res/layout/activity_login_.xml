<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login_Activity"
    android:orientation="vertical">

    <ImageView
        android:transitionName="imageTransition"
        android:id="@+id/login_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@null"
        android:src="@drawable/login_image" />
    <EditText
        android:transitionName="nameTransition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_email"
        android:hint="Email..."
        android:inputType="textEmailAddress"
        android:background="@drawable/inputs"
        android:drawableStart="@drawable/ic_mail"
        android:drawablePadding="5dp"
        android:textSize="22sp"
        android:padding="4dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"/>

    <EditText
        android:transitionName="descTransition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_password"
        android:hint="Password..."
        android:inputType="textPassword"
        android:background="@drawable/inputs"
        android:drawableStart="@drawable/ic_password"
        android:drawableEnd="@drawable/ic_show_pass"
        android:textSize="22sp"
        android:padding="4dp"
        android:drawablePadding="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/forget_password_link"
        android:text="Forget password?"
        android:textAlignment="textEnd"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:textSize="17dp"
        android:textStyle="bold"
        android:textColor="#222922"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/login_button"
        android:text="Login"
        android:textColor="#020202"
        android:textSize="19sp"
        android:background="@drawable/button_login"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/need_new_account"
        android:text="Need new Account?"
        android:textAlignment="center"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#222922"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="or Login using phone number"
        android:textAlignment="center"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:textSize="17dp"
        android:textColor="#222922"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/phone_login_button"
        android:text="Phone Number"
        android:textColor="#020202"
        android:textSize="19sp"
        android:background="@drawable/button_login"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"/>
</LinearLayout>