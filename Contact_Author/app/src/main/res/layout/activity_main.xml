<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/fb"
        android:scaleType="centerCrop"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/avata"
        android:layout_gravity="center"
        android:layout_marginTop="-75dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nguyễn Văn Tú"
        android:textStyle="bold"
        android:textSize="25sp"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mobile Developer"
        android:gravity="center"
        android:textColor="#00F7FF"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/status_drawer"
        android:gravity="center"
        android:textSize="18sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin liên hệ"
        android:textSize="20sp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:textColor="#000000"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="9">
        <ImageButton
            android:layout_marginLeft="15dp"
            android:id="@+id/facebook_drawer"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_fb"
            android:scaleType="centerCrop"
            android:backgroundTint="@android:color/white"/>
        <ImageButton
            android:layout_marginLeft="30dp"
            android:id="@+id/gmail_drawer"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/gmail"
            android:backgroundTint="@android:color/white"/>
        <ImageButton
            android:layout_marginLeft="30dp"
            android:layout_marginRight="15dp"
            android:id="@+id/youtube_drawer"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/youtube"
            android:backgroundTint="@android:color/white"/>
        <ImageButton
            android:layout_marginLeft="30dp"
            android:layout_marginRight="15dp"
            android:id="@+id/rate_me_drawer"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/rateme"
            android:backgroundTint="@android:color/white"/>
    </LinearLayout>

</LinearLayout>