<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Admin.AdminMaintainProductActivity"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/maintain_product_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@+id/product_item_name"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp" />
        <EditText
            android:layout_below="@id/maintain_product_image"
            android:id="@+id/maintain_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product Name"
            android:textAlignment="center"
            android:layout_marginTop="7dp"
            android:textSize="18sp"
            android:padding="10dp"
            android:textColorHint="@color/colorPrimaryDark"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/inputs"/>

        <EditText
            android:layout_below="@id/maintain_product_name"
            android:id="@+id/maintain_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product Price"
            android:inputType="number"
            android:textAlignment="center"
            android:layout_marginTop="7dp"
            android:textSize="18sp"
            android:padding="10dp"
            android:textColorHint="@color/colorPrimaryDark"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/inputs"/>

        <EditText
            android:layout_marginTop="7dp"
            android:layout_below="@id/maintain_product_price"
            android:id="@+id/maintain_product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product Description"
            android:textAlignment="center"
            android:textSize="18sp"
            android:padding="10dp"
            android:textColorHint="@color/colorPrimaryDark"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/inputs"/>

        <Button
            android:layout_marginTop="15dp"
            android:layout_below="@id/maintain_product_description"
            android:id="@+id/maintain_product_change_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apply Change"
            android:textAlignment="center"
            android:textSize="18sp"
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimaryDark"/>

        <Button
            android:layout_marginTop="15dp"
            android:layout_below="@id/maintain_product_change_btn"
            android:id="@+id/maintain_delete_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Product"
            android:textAlignment="center"
            android:textSize="18sp"
            android:padding="10dp"
            android:layout_marginBottom="2dp"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimaryDark"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>