<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm từ mới"
        android:gravity="center"
        android:layout_margin="10dp"
        android:textSize="25sp"
        android:textColor="#0055FF"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Từ mới"
            android:textSize="20sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập từ mới"
            android:id="@+id/dialogTuVung"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nghĩa"
            android:textSize="20sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập nghĩa của từ"
            android:id="@+id/dialogNghia"
            android:layout_marginLeft="18dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Hủy"
            android:id="@+id/dialogButtonHuy"
            android:layout_marginLeft="20dp"/>
        <Button
            android:layout_gravity="left"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Xác nhận"
            android:id="@+id/dialogButtonXacNhanThem"
            android:layout_marginLeft="40dp"/>
    </LinearLayout>
</LinearLayout>